{
    "name": "ohmysmtp/ohmysmtp_swiftmailer",
    "description": "The official Swiftmailer transport for OhMySMTP",
    "keywords": [
        "OhMySMTP",
        "ohmysmtp_swiftmailer"
    ],
    "homepage": "https://github.com/ohmysmtp/ohmysmtp_swiftmailer",
    "license": "MIT",
    "authors": [
        {
            "name": "Paul Oms",
            "email": "support@ohmysmtp.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3",
        "swiftmailer/swiftmailer": ">=6.2.4",
        "guzzlehttp/guzzle": ">=6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Ohmysmtp\\OhmysmtpSwiftmailer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ohmysmtp\\OhmysmtpSwiftmailer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
